<UserControl x:Class="SatisfactoryServerGUI.ServerControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatisfactoryServerGUI"
             mc:Ignorable="d" 
             d:DesignWidth="454" d:DesignHeight="275">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"></Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Left" Margin="10,5,0,0">
            <Button x:Name="btnStartStop" Content="Start/Stop Server" Height="25" Width="120" HorizontalAlignment="Left" Margin="15,5,0,0"></Button>
            <Button x:Name="btnRestart" Content="Restart Server" Height="25" Width="100" HorizontalAlignment="Left" Margin="150,5,0,0"></Button>
            <Button x:Name="btnUpdate" Content="Install/Update Server" Height="25" Width="150" HorizontalAlignment="Left" Margin="270,5,0,0" Click="btnUpdate_Click"></Button>
        </Grid>
    </Grid>
</UserControl>
